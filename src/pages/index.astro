---
import Layout from "../layouts/Layout.astro";
import lessonsData from "../../data/lessons.json";

// Sort lessons by number
const sortedLessons = [...lessonsData.lessons].sort(
    (a, b) => a.lesson - b.lesson,
);
---

<Layout title="Japanese Vocabulary Lessons">
    <main>
        <h1>Japanese Vocabulary Lessons</h1>
        <p>Select a lesson to view its vocabulary:</p>

        <div class="lessons-grid">
            {
                sortedLessons.map((lesson) => (
                    <a href={`/lesson/${lesson.lesson}`} class="lesson-card">
                        Lesson {lesson.lesson}
                    </a>
                ))
            }
        </div>
    </main>
</Layout>

<style>
    main {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
        text-align: center;
    }

    h1 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    .lessons-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
        gap: 1rem;
        margin-top: 2rem;
    }

    .lesson-card {
        padding: 1.5rem;
        background-color: #4a86e8;
        color: white;
        text-decoration: none;
        border-radius: 8px;
        font-weight: bold;
        transition:
            transform 0.2s,
            background-color 0.2s;
    }

    .lesson-card:hover {
        transform: translateY(-3px);
        background-color: #3a76d8;
    }
</style>
